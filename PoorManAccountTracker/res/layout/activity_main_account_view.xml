<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res/ie.ibuttimer.pmat"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    custom:accountBalance="@string/main_account_bal_header"
    custom:accountName="@string/main_account_name_header" >
    
    <TextView
        android:id="@+id/accountView_textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/main_account_name_header"
        android:textColor="@color/sysBlack" />

    <TextView
        android:id="@+id/accountView_textViewBal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/main_account_bal_header"
        android:textColor="@color/sysBlack" />

</RelativeLayout>