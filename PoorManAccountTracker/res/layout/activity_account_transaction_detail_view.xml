<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/accountTransactionDetail_tableLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:paddingBottom="2dip"
    android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
    android:paddingTop="2dip" >

    <TableRow
        android:id="@+id/accountTransactionDetail_tableRowCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/accountTransactionDetail_textViewCategoryTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/account_transaction_categories"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/accountTransactionDetail_textViewCategoryName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:text="@string/textViewDefaultText"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/accountTransactionDetail_textViewCategoryAmt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="@string/textViewDefaultText"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </TableRow>

    <TableRow
        android:id="@+id/accountTransactionDetail_tableRowRef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/accountTransactionDetail_textViewRefTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/addtransaction_reference"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/accountTransactionDetail_textViewRef"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:text="@string/textViewDefaultText"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </TableRow>

    <TableRow
        android:id="@+id/accountTransactionDetail_tableRowNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/accountTransactionDetail_textViewNoteTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/addtransaction_note"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/accountTransactionDetail_textViewNote"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:text="@string/textViewDefaultText"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </TableRow>

</TableLayout>